{
    "version": 1, 
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(levelname)-8s - %(message)s"
        },
        "not_simple":{
            "format": "%(asctime)s - %(name)s -%(levelname)-8s - %(message)s"
        }
    },
    "filters":{
        "info_and_below":{
            "()": "main_log.filter_info_and_below",
            "level": "INFO"
        },
        "debug": {
            "()": "main_log.filter_debug", 
            "level": "DEBUG"
        }
    },
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler", 
            "level": "INFO", 
            "formatter": "simple", 
            "stream": "ext://sys.stdout",
            "filters": []
        },
        "stderr": {
            "class": "logging.StreamHandler",
            "level": "ERROR", 
            "formatter": "not_simple",
            "stream": "ext://sys.stderr"
        },
        "file": {
            "class": "logging.FileHandler", 
            "formatter": "simple", 
            "filename": "main.log", 
            "mode": "w"
        },
        "vnv_file": {
            "class": "logging.FileHandler", 
            "level": "CRITICAL",
            "formatter": "not_simple",
            "filename": "vnv.log", 
            "mode": "w"
        },
        "debug_file": {
            "class": "logging.FileHandler", 
            "level": "DEBUG", 
            "formatter": "simple",
            "filename": "debug.log", 
            "mode": "w",
            "filters": ["debug"]
        }
    },
    "root":{
        "level": "DEBUG", 
        "handlers": [
            "stderr",
            "stdout",
            "file",
            "vnv_file",
            "debug_file"
        ]
    }
}
